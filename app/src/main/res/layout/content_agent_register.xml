<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.AgentRegisterActivity"
    tools:showIn="@layout/activity_agent_register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/agentRegisterName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/agentRegisterUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="20"
            android:hint="Username"
            android:inputType="textPersonName" />
    </LinearLayout>

    <EditText
        android:id="@+id/agentRegisterDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Description" />

    <EditText
        android:id="@+id/agentRegisterVisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Visa services available" />

    <EditText
        android:id="@+id/agentRegisterHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Hours Open" />

    <EditText
        android:id="@+id/agentRegisterDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Distance"
        android:inputType="number" />

    <EditText
        android:id="@+id/agentRegisterRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Rating"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/agentRegisterReviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Reviews"
        android:inputType="number" />

    <Button
        android:id="@+id/agentRegisterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick_agentRegister"
        android:text="Create Agent" />

</LinearLayout>