<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.edcall.app.Fragments.CourseApply8Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="25dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Permanent address in home country"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/courseApplyHomeCountryStreet_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/et_background"
                android:ems="10"
                android:hint="Street number and name"
                android:padding="13dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/courseApplyHomeCountrySuburb_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/et_background"
                android:ems="10"
                android:hint="Suburb"
                android:padding="13dp"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/courseApplyHomeCountryState_ET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/et_background"
                    android:ems="10"
                    android:hint="State"
                    android:padding="13dp"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/courseApplyHomeCountryPostCode_ET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/et_background"
                    android:ems="10"
                    android:hint="Post Code"
                    android:inputType="number"
                    android:padding="13dp"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Home country"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <com.hbb20.CountryCodePicker
                android:id="@+id/courseApplyHomeCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_buttons_border_unselected"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="30dp"
                android:text="No"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:ccp_countryPreference="IN,NP,CN,PH"
                app:ccp_rememberLastSelection="false"
                app:ccp_showFullName="true"
                app:ccp_showNameCode="false"
                app:ccp_showPhoneCode="false"
                app:ccp_textSize="20dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>