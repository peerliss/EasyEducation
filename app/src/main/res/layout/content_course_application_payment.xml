<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.CourseApplicationStatusActivity"
    tools:showIn="@layout/activity_course_application_payment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/courseApplicationPayment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Course Payment Details"
                android:textAlignment="center"
                android:textColor="#19769F"
                android:textSize="30sp" />

            <LinearLayout
                android:id="@+id/courseApplicationPayment_bonus_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/courseApplicationPayment_bonusTitle_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign up bonus!"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/courseApplicationPayment_bonusDetails_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Did a friend send you here?
Get $250 for you and a  friend when you mention their name and email address during payment."
                    android:textColor="@android:color/black"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/courseApplicationPayment_courseDetails_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/courseApplicationPayment_courseName_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Course Name - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/courseApplicationPayment_courseCode_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="National Course Code - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/courseApplicationPayment_institutionName_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Institution Name - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/courseApplicationPayment_institutionCricos_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Institution Cricos - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/courseApplicationPayment_paymentDetails_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/courseApplicationPayment_payment_fullFee_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Full fee - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/courseApplicationPayment_payment_cashback_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cash back - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/courseApplicationPayment_payment_youPay_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="You pay - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/courseApplicationPayment_payment_fullFeeSemester_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Full fee - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/courseApplicationPayment_payment_cashbackSemester_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cash back - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/courseApplicationPayment_payment_youPaySemester_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You pay - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>