<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.edcall.app.Activities.CourseApplicationStatusActivity"
    tools:showIn="@layout/activity_course_application_payment">

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-7dp"
        android:backgroundTint="@color/white"
        android:indeterminate="true"
        android:indeterminateTint="#1a09d6"
        android:max="100"
        android:visibility="invisible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingTop="10dp"
            android:paddingEnd="25dp"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/courseApplicationPayment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Course Payment Details"
                android:textAlignment="center"
                android:textColor="#19769F"
                android:textSize="30sp" />

            <LinearLayout
                android:id="@+id/courseApplicationPayment_bonus_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/courseApplicationPayment_bonusTitle_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cashback"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/courseApplicationPayment_bonusDetails_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Want to get up to 10% cashback? Enter a referral code below."
                    android:textColor="@android:color/black"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/courseApplicationPayment_bonusDetails_tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Don't have a referral code? Get a friend to sign up to our app and they get $250 after you successfully enrol using their referral code!"
                    android:textColor="@android:color/black"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/courseApplicationPayment_referredBy_Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/et_background"
                    android:ems="10"
                    android:hint="Enter referee code"
                    android:imeOptions="actionGo"
                    android:inputType="textPersonName"
                    android:padding="13dp"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/courseApplicationPayment_courseDetails_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/courseApplicationPayment_courseName_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Course Name - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/courseApplicationPayment_courseCode_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="National Course Code - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/courseApplicationPayment_institutionName_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Institution Name - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/courseApplicationPayment_institutionCricos_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Institution Cricos - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/courseApplicationPayment_paymentDetails_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/courseApplicationPayment_payment_fullFee_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tuition fee - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/courseApplicationPayment_payment_cashback_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cash back - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/courseApplicationPayment_payment_youPay_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="You pay - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/courseApplicationPayment_payment_fullFeeSemester_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tuition fee - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/courseApplicationPayment_payment_cashbackSemester_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cash back - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/courseApplicationPayment_payment_youPaySemester_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="You pay - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/courseApplicationPayment_enrolmentFee_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enrolment Fee - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/courseApplicationPayment_materialFee_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Material Fee - "
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/courseApplicationPayment_payment_SuccessfulPayments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Successfully Paid: $"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/courseApplicationPayment_additionalFees_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/courseApplicationPayment_additionalFees_1_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Material Fee: $300"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/courseApplicationPayment_additionalFees_2_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/courseApplicationPayment_additionalFees_3_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:visibility="gone" />

            </LinearLayout>

            <com.stripe.android.view.CardInputWidget
                android:id="@+id/card_input_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/courseApplicationPayment_confirm_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_gradient"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>