<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.edcall.app.Fragments.CourseApply20Fragment">

    <ScrollView
        android:id="@+id/courseApplyCurrentQualification_Scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Current Educational Provider"
                android:textColor="@android:color/black"
                android:textSize="24sp" />


            <EditText
                android:id="@+id/courseApplyCurrentQualification_Name_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/et_background"
                android:ems="10"
                android:hint="Qualification Name"
                android:padding="13dp"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/courseApplyCurrentQualification_Institute_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/et_background"
                android:ems="10"
                android:hint="Institution Name"
                android:padding="13dp"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/courseApplyViewCurrentQualificationPhoto_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Take photo of current Confirmation of Enrolment and Transcript"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/courseApplyTakeCurrentQualificationPhoto_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/profile_buttons_border_unselected"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingStart="25dp"
                android:paddingTop="7dp"
                android:paddingEnd="25dp"
                android:paddingBottom="7dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="-25dp"
                    android:layout_weight="1"
                    android:src="@drawable/camera_icon_transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="fill_vertical"
                    android:layout_marginStart="40dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Take photo"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>