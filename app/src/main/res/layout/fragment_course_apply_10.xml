<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.edcall.app.Fragments.CourseApply10Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingBottom="30dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="How do you rate your level of English?"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/courseApplyEnglish_Beginner_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/profile_buttons_border_unselected"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:text="Beginner"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/courseApplyEnglish_Elementary_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/profile_buttons_border_unselected"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:text="Elementary"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/courseApplyEnglish_PreIntermediate_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/profile_buttons_border_unselected"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:text="Pre-Intermediate"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/courseApplyEnglish_Intermediate_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/profile_buttons_border_unselected"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:text="Intermediate"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/courseApplyEnglish_UpperIntermediate_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/profile_buttons_border_unselected"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:text="Upper-Intermediate"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/courseApplyEnglish_Advanced_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_buttons_border_unselected"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:text="Advanced"
                android:textAllCaps="false"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>