<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.edcall.app.Fragments.CourseApply17Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingBottom="30dp" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Health Insurance"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Provide details of your Overseas Student Health Cover (OSHC)"
                android:textColor="@android:color/black"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/courseApplyHealthInsurance_Name_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/et_background"
                android:ems="10"
                android:hint="OSHC Provider Name"
                android:imeOptions="actionGo"
                android:padding="13dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/courseApplyHealthInsurance_Number_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/et_background"
                android:ems="10"
                android:hint="Membership Number"
                android:imeOptions="actionGo"
                android:inputType="number"
                android:padding="13dp"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Cover Expiry Date"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/courseApplyHealthInsurance_Expiry_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/et_background"
                android:ems="10"
                android:focusable="false"
                android:inputType="date"
                android:padding="13dp"
                android:hint="Cover Expiry Date"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>